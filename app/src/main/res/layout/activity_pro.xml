<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".ProActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:scaleType="center"
            android:src="@drawable/propen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryText"
            android:animateLayoutChanges="true"
            android:id="@+id/pro_head"
            android:text="You're not premium!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textAlignment="center"
            android:id="@+id/pro_text"
            android:textSize="16sp"
            android:textColor="@color/colorSecondaryText"
            android:animateLayoutChanges="true"
            android:text="Upgrade to enjoy an ad-free experience and get assured of lifetime premium with all new feature additions!"/>

        <Button
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:id="@+id/pro_upgrade"
            android:layout_height="wrap_content"
            android:textColor="@color/colorIcons"
            android:text="UPGRADE"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:id="@+id/pro_redeem"
            android:layout_height="wrap_content"
            android:textColor="@color/colorIcons"
            android:text="REDEEM PROMO CODE"
            android:backgroundTint="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:id="@+id/pro_help"
            android:text="Already purchased but uninstalled?\nContact hello@praveen.io (or) @HelloPraveenIO\nto get back your Premium status!"/>

    </LinearLayout>

</FrameLayout>